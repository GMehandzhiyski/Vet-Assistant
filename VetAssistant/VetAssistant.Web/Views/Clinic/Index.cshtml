@{
    ViewData["Title"] = "Clinic Management";
}

<h1>@ViewData["Title"]</h1>
<div class="card-footer text-center">
    <div class="btn-group" role="group" aria-label="Clinic Actions">
        <a class="btn btn-primary d-flex justify-content-center align-items-center flex-fill mx-1" "
            href="@Url.Action("Add", "Clinic")">Add Clinic</a>
        <a class="btn btn-secondary d-flex justify-content-center align-items-center flex-fill mx-1"
           href="@Url.Action("Edit", "Clinic")">Edit Clinic</a>
        <a class="btn btn-danger d-flex justify-content-center align-items-center flex-fill mx-1" 
            onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
    </div>
</div>


